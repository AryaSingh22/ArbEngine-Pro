# Environment Configuration for Solana Arbitrage Dashboard

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/solana_arb

# Redis
REDIS_URL=redis://localhost:6379

# Solana RPC (use premium provider for production)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Arbitrage Settings
MIN_PROFIT_THRESHOLD=0.5
MAX_POSITION_SIZE=1000
SLIPPAGE_TOLERANCE=1.0

# API Server
API_PORT=8080

# Logging
LOG_LEVEL=info
RUST_LOG=info,solana_arb_core=debug,solana_arb_collector=debug,solana_arb_api=debug
PRIVATE_KEY=
